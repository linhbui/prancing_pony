<div class="col-sm-4 col-md-3">
    <div class="thumbnail">
        <div class="item-images">
            <a href="#/items/<%= item.id %>"><img class='item-index-image' src='<%= item.escape("image_url") %>' ></a>
            <img class='item-seller-avatar img-circle' src="<%= item.escape("seller_image_url") %>">
        </div>
      <div class="caption">
          <h3><%= item.escape("title")%></h3>
          <h5>Price: <%= item.escape("price") %> silvers</h5>
          <p><%= item.escape("description") %></p>
          <p>Sold by <%= item.escape("seller") %> </p>
          <p><a href="#/items/<%= item.id %>" class="btn btn-default" id="button-explore" role="button">Explore</a> <a href="#" class="btn btn-default" role="button"><span class="glyphicon glyphicon-heart"></span></a><a href="#" class="btn btn-default" role="button"><span class="glyphicon glyphicon-shopping-cart"></span></a></p>
      </div>
    </div>
</div>


