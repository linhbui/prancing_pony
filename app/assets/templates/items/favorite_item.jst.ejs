<div class="item-thumbnail col-md-4">
    <div class="thumbnail">
        <div class="item-images">
            <a href="#/items/<%= favorite.item_id %>"><img class='item-index-image' src='<%= favorite.escape("item_image_url") %>' style="object-fit:cover; height:250px"></a>
            <img class='item-seller-avatar img-circle' src="<%= favorite.escape("item_seller_image") %>" >
        </div>
        <div class="caption">
            <h3><%= favorite.escape("item_title")%></h3>
            <h5>Price: <%= favorite.escape("item_price").slice(0,-2) %> silvers</h5>
            <p><%= favorite.escape("item_description").slice(0,100) %>... <a href="#/items/<%= item.id %>">Read more</a></p>
            <p>Sold by <%= favorite.escape("item_seller") %> </p>
            <button id='button-remove-favorite' data-id='<%= favorite.escape('id') %>'>
                Unfavorite
            </button>
        </div>
    </div>
</div>
