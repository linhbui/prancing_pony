<div class='users_form' class="col-xs-6 col-xs-offset-3">
    <h1 style="color: white; margin-bottom: 20px">Create an item</h1>
    <div class="row">
      <div class="item_form col-xs-4 col-xs-offset-4">
        <%= form_for @item do |f| %>
            <div class="form-group">
              <%= f.text_field 'title',
                                class: 'form-control',
                                placeholder: 'Your magical item' %>
            </div>

            <div class="form-group">
              <%= f.number_field 'price',
                                class: 'form-control',
                                placeholder: 'Price' %>
            </div>
            
          <div class="form-group">
            <%= f.text_area 'description',
                                 class: 'form-control',
                                 placeholder: 'Description' %>
          </div>
            
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon glyphicon glyphicon-picture"></span>
                <%= f.filepicker_field :filepicker_url,
                                     button_text: 'Upload Avatar',
                                     button_class: 'form-control btn btn-info', 
                                     placeholder: 'Avatar URL',
                                     services: 'COMPUTER, IMAGE_SEARCH, URL' %>
              </div>
            </div>
          
          <%= f.submit "Sign Up", class: 'btn btn-info form-control' %>
        <% end %>
        </div> <!--close the col-xs-2 etc -->
    </div> <!--close row-->
</div> <!-- close div userform -->

<%= text_area_tag(:message, "Hi, nice site", size: "24x6") %>
<%= password_field_tag(:password) %>
<%= hidden_field_tag(:parent_id, "5") %>
<%= search_field(:user, :name) %>
<%= telephone_field(:user, :phone) %>
<%= date_field(:user, :born_on) %>
<%= datetime_field(:user, :meeting_time) %>
<%= datetime_local_field(:user, :graduation_day) %>
<%= month_field(:user, :birthday_month) %>
<%= week_field(:user, :birthday_week) %>
<%= url_field(:user, :homepage) %>
<%= email_field(:user, :address) %>
<%= color_field(:user, :favorite_color) %>
<%= time_field(:task, :started_at) %>
<%= number_field(:product, :price, in: 1.0..20.0, step: 0.5) %>
<%= range_field(:product, :discount, in: 1..100) %>

